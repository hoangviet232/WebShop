@section Scripts{
    <script>
        $(document).ready(function () {
           $("#keyword").keyup(function () {
              var strkeyword = $('#keyword').val();
               $.ajax({
                   url: "api/search/findproduct", // Đảm bảo đường dẫn chính xác tới Action FindTinDang
                   datatype: "html",
                   type: "POST",
                   data: { keyword: strkeyword },
                   async: true,
                   success: function (results) {
                      $("#find-product").html("");
                       $("#find-product").html(results);
                   },
                   error: function (xhr) {
                       alert('error');
                    }
                });
            });
        });

        $(document).ready(function () {
            $("#keyword1").keyup(function () {
                var strkeyword = $('#keyword1').val();
                $.ajax({
                    url: "api/search/findproduct", 
                    datatype: "html",
                    type: "POST",
                    data: { keyword: strkeyword },
                    async: true,
                    success: function (results) {
                        $("#find-product").html("");
                        $("#find-product").html(results);
                    },
                    error: function (xhr) {
                        alert('error');
                    }
                });
            });
        });

        $(document).ready(function () {
            // Khởi tạo thanh trượt giá
            $("#slider-range").slider({
                range: true,
                min: 0,
                max: 1000000, // Giá trị tối đa có thể được cập nhật tùy theo dữ liệu của bạn
                step: 1000,   // Bước nhảy giá trị trên thanh trượt
                values: [0, 1000000],  // Giá trị ban đầu của thanh trượt
                slide: function (event, ui) {
                    // Hiển thị giá trị của thanh trượt trong input
                    $("#amount").val(ui.values[0] + " - " + ui.values[1]);
                }
            });

            // Xử lý sự kiện khi nhấn nút "Filter"
            $("#filter-button").click(function () {
                var priceRange = $("#slider-range").slider("values");
                var minPrice = priceRange[0];
                var maxPrice = priceRange[1];

                $.ajax({
                    url: "/Product/FilterProducts",  // Điều chỉnh đường dẫn API tương ứng
                    type: 'GET',
                    data: {
                        minPrice: minPrice,
                        maxPrice: maxPrice
                    },
                    dataType: 'html',  // Đặt kiểu dữ liệu là 'html' thay vì 'json' vì bạn sẽ nhận được HTML từ PartialView
                    success: function (filteredProductsHtml) {
                        // Cập nhật danh sách sản phẩm sau khi lọc
                        $("#product-list").html(filteredProductsHtml);
                    },
                    error: function (xhr) {
                        console.log('Error:', xhr);
                    }
                });
            });
        });


        $("#sort").change(function () {
            var selectedOption = $(this).find(':selected');
            var priceRange = selectedOption.data('price').split(':');
            var minPrice = parseFloat(priceRange[0]);
            var maxPrice = parseFloat(priceRange[1]);

            $.ajax({
                url: `/Product/FilterProducts?minPrice=${minPrice}&maxPrice=${maxPrice}`,
                type: 'GET',
                dataType: 'html',  // Đặt kiểu dữ liệu là 'html' thay vì 'json' vì bạn sẽ nhận được HTML từ PartialView
                success: function (filteredProductsHtml) {
                    // Cập nhật danh sách sản phẩm sau khi lọc
                    $("#product-list").html(filteredProductsHtml);
                },
                error: function (xhr) {
                    console.log('Error:', xhr);
                }
            });
        });

   
    </script>
